<h2>Comments</h2>
<% @article.comments.each do |comment| %>
  <p>
    <strong>User:</strong>
    <%= comment.user %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>


  <%= link_to "Destroy Comment", [comment.article, comment], data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                } %>
<% end %>

<%= link_to "Add a new Comment", new_article_comment_path %>