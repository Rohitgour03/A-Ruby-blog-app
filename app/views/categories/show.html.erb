<h2> <%= @category.title %> </h2>

<% @articles.each do |article| %>
  <%= render article %>
  <p>
    <%= link_to "Show this article", article %>
  </p>
<% end %>

<div>
  <%= link_to "Back to categories", categories_path %>
  <%= button_to "Destroy this category", @category, method: :delete %>
</div>